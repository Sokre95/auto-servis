@model AutoServis.ViewModels.KorisnikViewModel
@{
    ViewBag.Title = "Registracija korisnika";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Kreirajte korisnički račun.</h4>
    <hr />

    <h4>Unesite osnovne podatke.</h4>
    <hr/>
	<div class="form-group">
		@Html.LabelFor(m => m.Ime, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Ime, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Ime)
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Prezime, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Prezime, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Prezime)
		</div>
	</div>
    <div class="form-group">
        @Html.LabelFor(m => m.BrojTel, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BrojTel, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.BrojTel)
        </div>
    </div>
	<div class="form-group">
		@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Email)
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Password)
		</div>
	</div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>
    <hr/>
    <h4>Unesite podatke o vozilu.</h4>
    <hr/>
    <div class="form-group">
        @Html.LabelFor(m => m.RegOznaka, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegOznaka, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegOznaka)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GodProizv, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.GodProizv, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GodProizv)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TipVozilaId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TipVozilaId, new SelectList(Model.TipoviVozila, "Id", "Naziv"), "Odaberite tip vozila", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TipVozilaId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Registracija" />
        </div>
    </div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
