@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <p class="navbar-text">Pozdrav @User.Identity.GetUserName().Split('@')[0] !</p>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Odjava</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registracija", "Register", "Account", null, new {id = "registerLink"})</li>
        <li>@Html.ActionLink("Prijava", "Login", "Account", null, new {id = "loginLink"})</li>
    </ul>
}