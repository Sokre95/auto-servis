@model AutoServis.ViewModels.KorisnikViewModelForAdminChanges

@{
    ViewBag.Title = "Izmjeni korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Izmjeni podatke o serviseru</h2>

@using (Html.BeginForm("IzmjeniKorisnika", "Admin", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_KorisnikAdminForm")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Izmjeni"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}